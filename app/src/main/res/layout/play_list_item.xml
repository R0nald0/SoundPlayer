<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_contraint_play_list"
    android:layout_width="120dp"
    android:layout_height="110dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/border_playlist_item"
    tools:background="@drawable/border_playlist_item">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgPlayList"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ImageRounded"
        app:srcCompat="@drawable/ic_play_arrow_24" />

    <TextView
        android:id="@+id/txv_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Play List Name"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgPlayList"
        app:layout_constraintStart_toStartOf="@+id/imgPlayList"
        app:layout_constraintTop_toBottomOf="@+id/imgPlayList"
        app:layout_constraintVertical_bias="0.38" />

</androidx.constraintlayout.widget.ConstraintLayout>